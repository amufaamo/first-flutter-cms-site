---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home Page">
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-12 gap-4 mb-8">
      <div class="col-span-12 md:col-span-12">
        <section class="relative h-[400px] flex items-center justify-center text-center text-white rounded-xl overflow-hidden mb-8">
          <div class="absolute inset-0 z-0">
            <img src="https://placehold.co/1200x600/darkblue/white" alt="Hero Background" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-black/50"></div>
          </div>
          <div class="relative z-10 p-8 max-w-2xl">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome to Hello My Site</h1>
            <p class="text-xl opacity-90">Build something amazing</p>
          </div>
        </section>

      </div>
    </div>
  </main>
</Layout>
