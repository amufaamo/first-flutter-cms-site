---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home Page">
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-12 gap-4 mb-8">
      <div class="col-span-12 md:col-span-12">
        <h2 class="text-2xl font-bold mb-4">こんにちは

This is a new text block.</h2>
      </div>
    </div>
    <div class="grid grid-cols-12 gap-4 mb-8">
      <div class="col-span-12 md:col-span-12">
        <img src="https://placehold.co/600x400" alt="Placeholder Image" class="rounded-lg shadow-md w-full h-auto" />
      </div>
    </div>
    <div class="grid grid-cols-12 gap-4 mb-8">
      <div class="col-span-12 md:col-span-12">
        <a href="#" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200">Click Me</a>
      </div>
    </div>
  </main>
</Layout>
